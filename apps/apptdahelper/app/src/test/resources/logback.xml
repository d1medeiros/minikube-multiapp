<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{mm:ss.SSS} %logger{20} %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.example" level="info" />
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>